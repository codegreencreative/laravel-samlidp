{
    "name": "maghonemi/laravel-samlidp",
    "description": "Make your Laravel application an Idenification Provider using SAML 2.0.",
    "keywords": ["laravel", "saml", "saml 2.0", "auth", "acl", "sso", "idp"],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "illuminate/support": "^5.6",
        "illuminate/routing": "^5.6",
        "lightsaml/lightsaml": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Maghonemi\\SamlIdp\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Maghonemi\\SamlIdp\\LaravelSamlIdpServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
